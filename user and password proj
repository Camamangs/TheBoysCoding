#include <stdio.h>
#include <string.h>

int main() {
    // start making a system that checks for the correct username and password
    int MaxStoredData = 5, DataLength = 10; // dili mo gana dapat ma initialized ang StoredUser kay ang c taas ra kung mag puno ani nga mga variable as a initializer

    char StoredUser[5][10] = {"Admin", "test1", "test2", "test3", "test4"};
    char InputUser[DataLength];
    int Pass = 0;
    LogIn:

    printf("Username: ");
    scanf("%s", &InputUser);

    for (int i = 0 ; i <= MaxStoredData; i++) {
        
        if (strcmp(InputUser, StoredUser[i]) == 0) {
            printf("\nUser Found!!\n");
            Pass = 1;
            break;
        }
    }

    if (Pass == 0) {
        goto LogIn;
    }

    return 0;

    // I'll breifly stop it here cuz yeah but ill continue it with c++
}